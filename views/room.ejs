<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Anonymous Video Chat</title>
  <script>const ROOM_ID = "<%= roomId %>"</script>
  <script defer src="https://unpkg.com/peerjs@1.2.0/dist/peerjs.min.js"></script>
  <script defer src="/socket.io/socket.io.js"></script>
  <script defer src="/script.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link rel="stylesheet" href="room.css">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #0f172a, #1e3a8a);
      color: white;
      height: 100vh;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      transition: 0.4s ease;
    }

    header {
      background: rgba(30, 41, 59, 0.85);
      backdrop-filter: blur(10px);
      padding: 15px 25px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 2px solid #38bdf8;
      z-index: 10;
    }

    header h1 {
      font-size: 18px;
      display: flex;
      align-items: center;
    }

    header h1 i {
      margin-right: 10px;
      color: #38bdf8;
    }
    #video-grid {
      flex: 1;
      padding: 20px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 20px;
      overflow-y: auto;
      scroll-behavior: smooth;
    }

    .video-card {
      position: relative;
      background: rgba(15, 23, 42, 0.8);
      border: 2px solid #38bdf8;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 10px 20px rgba(56, 189, 248, 0.2);
      transition: all 0.3s ease;
      width: 100%;
      max-width: 400px;
      height: 280px;
    }

    .video-card:hover {
      transform: scale(1.03);
      box-shadow: 0 12px 30px rgba(56, 189, 248, 0.5);
    }

    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .controls {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background: rgba(30, 41, 59, 0.95);
      backdrop-filter: blur(10px);
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 12px 10px;
      gap: 15px;
      flex-wrap: wrap;
      z-index: 1000;
      border-top: 2px solid #38bdf8;
      box-shadow: 0 -5px 10px rgba(0, 0, 0, 0.3);
    }

    .control-btn {
      background: transparent;
      color: #38bdf8;
      border: 2px solid #38bdf8;
      border-radius: 50%;
      width: 52px;
      height: 52px;
      font-size: 20px;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .control-btn:hover {
      background-color: #38bdf8;
      color: #0f172a;
      transform: scale(1.1);
    }

    .control-btn.active {
      background-color: #f43f5e;
      color: white;
      border-color: #f43f5e;
    }

    #endCallBtn {
      background-color: #ef4444;
      border: none;
      border-radius: 50%;
      width: 52px;
      height: 52px;
      color: white;
      font-size: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }

    #endCallBtn:hover {
      background-color: #dc2626;
      transform: scale(1.1);
    }
    .nav-icon-btn {
      background: transparent;
      border: none;
      color: #38bdf8;
      font-size: 20px;
      cursor: pointer;
      transition: transform 0.3s ease;
    }

    .nav-icon-btn:hover {
      transform: scale(1.2);
      color: #0ea5e9;
    }
    @media (max-width: 1024px) {
      .video-card {
        height: 240px;
      }
    }

    @media (max-width: 768px) {
      .video-card {
        max-width: 90vw;
        height: 45vh;
      }

      .control-btn,
      #endCallBtn {
        width: 46px;
        height: 46px;
        font-size: 18px;
      }
    }

    @media (max-width: 480px) {
      header h1 {
        font-size: 14px;
        flex-direction: column;
        align-items: flex-start;
      }

      .controls {
        flex-direction: column;
        gap: 12px;
        padding: 12px;
      }

      .control-btn,
      #endCallBtn {
        width: 42px;
        height: 42px;
        font-size: 17px;
      }
    }
    body.light-theme {
      background: linear-gradient(135deg, #ffffff, #e0f2fe);
      color: #0f172a;
    }

    body.light-theme header {
      background: rgba(224, 242, 254, 0.9);
      border-bottom: 2px solid #0ea5e9;
    }

    body.light-theme header h1 i {
      color: #0ea5e9;
    }

    body.light-theme .video-card {
      background: rgba(255, 255, 255, 0.85);
      border-color: #0ea5e9;
    }

    body.light-theme .controls {
      background: rgba(224, 242, 254, 0.95);
      border-top: 2px solid #0ea5e9;
    }

    body.light-theme .control-btn {
      color: #0ea5e9;
      border-color: #0ea5e9;
    }

    body.light-theme .control-btn:hover {
      background-color: #0ea5e9;
      color: white;
    }

    body.light-theme .control-btn.active {
      background-color: #f43f5e;
      border-color: #f43f5e;
      color: white;
    }

    body.light-theme #endCallBtn {
      background-color: #ef4444;
    }

    body.light-theme #endCallBtn:hover {
      background-color: #dc2626;
    }
  </style>
</head>

<body>
  <header>
    <h1><i class="fas fa-user-secret"></i> Anonymous Video Chat Room ID: <%= roomId %></h1>
    <button id="themeToggleBtn" class="nav-icon-btn" title="Toggle Theme">
      <i class="fas fa-sun"></i>
    </button>
  </header>

  <div id="video-grid"></div>

  <footer class="controls">
    <button id="muteButton" class="control-btn" title="Mute/Unmute">
      <i class="fas fa-microphone"></i>
    </button>
    <button id="cameraButton" class="control-btn" title="Camera On/Off">
      <i class="fas fa-video"></i>
    </button>
    <button id="shareButton" class="control-btn" title="Share Screen">
      <i class="fas fa-desktop"></i>
    </button>
    <button id="recordButton" class="control-btn" title="Record">
      <i class="fas fa-circle"></i>
    </button>
    <button id="settingsButton" class="control-btn" title="Settings">
      <i class="fas fa-cog"></i>
    </button>
    <button id="endCallBtn" title="End Call">
      <i class="fas fa-phone-slash"></i>
    </button>
  </footer>

  <script>
    document.getElementById("themeToggleBtn").addEventListener("click", () => {
      document.body.classList.toggle("light-theme");
      const icon = document.getElementById("themeToggleBtn").querySelector("i");
      icon.classList.toggle("fa-sun");
      icon.classList.toggle("fa-moon");
    });

    document.getElementById("shareButton").addEventListener("click", () => {
      alert("Screen sharing is not active yet.");
    });

    document.getElementById("recordButton").addEventListener("click", () => {
      alert("Recording feature is not active yet.");
    });

    document.getElementById("settingsButton").addEventListener("click", () => {
      alert("Settings are not active yet.");
    });
  </script>
</body>
</html>
